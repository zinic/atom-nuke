         <id>snapshots.maven.research.rackspace.com</id>

         <name>Rackspace Research Snapshots</name>
         <url>http://maven.research.rackspacecloud.com/content/repositories/snapshots</url>
      </snapshotRepository>
   </distributionManagement>
   
